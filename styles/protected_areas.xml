<Style name="protected_areas">

<!-- nature reserve -->
	<Rule>
		&maxscale_zoom12;
		&minscale_zoom12;
		<Filter>[way_area] &gt; 1E7</Filter>
		<TextSymbolizer fontset-name="sans-condensed-oblique" size="11" fill="#608c31" halo-radius="1" halo-fill="rgba(255,255,255,0.8)" wrap-width="100" wrap-before="true" placement="interior">[name]</TextSymbolizer>
	</Rule>
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom13;
		<Filter>[way_area] &gt; 1E7</Filter>
		<TextSymbolizer fontset-name="sans-condensed-oblique" size="13" fill="#608c31" halo-radius="1" halo-fill="rgba(255,255,255,0.8)" wrap-width="100" wrap-before="true" placement="interior" character-spacing="1">[name]</TextSymbolizer>
	</Rule>
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom13;
		<Filter>[way_area] &lt; 1E7 and [way_area] &gt; 1E6</Filter>
		<TextSymbolizer fontset-name="sans-condensed-oblique" size="11" fill="#608c31" halo-radius="1" halo-fill="rgba(255,255,255,0.8)" wrap-width="100" wrap-before="true" placement="interior">[name]</TextSymbolizer>
	</Rule>

	<Rule>
		&maxscale_zoom14;
		&minscale_zoom14;
		<Filter>[way_area] &gt; 1E7</Filter>
		<TextSymbolizer fontset-name="sans-condensed-oblique" size="16" fill="#608c31" halo-radius="1" halo-fill="rgba(255,255,255,0.8)" wrap-width="100" wrap-before="true" placement="interior" character-spacing="6">[name]</TextSymbolizer>
	</Rule>
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom14;
		<Filter>[way_area] &lt; 1E7 and [way_area] &gt; 1E6</Filter>
		<TextSymbolizer fontset-name="sans-condensed-oblique" size="13" fill="#608c31" halo-radius="1" halo-fill="rgba(255,255,255,0.8)" wrap-width="100" wrap-before="true" placement="interior">[name]</TextSymbolizer>
	</Rule>
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom14;
		<Filter>[way_area] &lt; 1E6</Filter>
		<TextSymbolizer fontset-name="sans-condensed-oblique" size="11" fill="#608c31" halo-radius="1" halo-fill="rgba(255,255,255,0.7)" wrap-width="100" wrap-before="true" placement="interior">[name]</TextSymbolizer>
	</Rule>
	
	<Rule>
		&maxscale_zoom15;
		&minscale_zoom18;
		<Filter>[way_area] &gt; 1E7</Filter>
		<TextSymbolizer fontset-name="sans-condensed-oblique" size="16" fill="#608c31" halo-radius="1" halo-fill="rgba(255,255,255,0.8)" wrap-width="100" wrap-before="true" placement="interior" character-spacing="20" line-spacing="10">[name]</TextSymbolizer>
	</Rule>
	<Rule>
		&maxscale_zoom15;
		&minscale_zoom18;
		<Filter>[way_area] &lt; 1E7 and [way_area] &gt; 1E6</Filter>
		<TextSymbolizer fontset-name="sans-condensed-oblique" size="13" fill="#608c31" halo-radius="1" halo-fill="rgba(255,255,255,0.8)" wrap-width="100" wrap-before="true" placement="interior" character-spacing="6">[name]</TextSymbolizer>
	</Rule>
	<Rule>
		&maxscale_zoom15;
		&minscale_zoom18;
		<Filter>[way_area] &lt; 1E6</Filter>
		<TextSymbolizer fontset-name="sans-condensed-oblique" size="11" fill="#608c31" halo-radius="1" halo-fill="rgba(255,255,255,0.7)" wrap-width="100" wrap-before="true" placement="interior">[name]</TextSymbolizer>
	</Rule>
  <Rule>
    &maxscale_zoom12;
    &minscale_zoom18;
    <LineSymbolizer stroke="#497a13" stroke-width="5" stroke-opacity="0.5"/>
  </Rule>
  
</Style>

<Layer name="protected_areas">
  <StyleName>protected_areas</StyleName>
  <Datasource>
    &postgis-settings;
    <Parameter name="table">
      (select way,name,way_area from planet_osm_polygon where
      boundary='national_park' or
      leisure='nature_reserve' or
      (boundary='protected_area' and protect_class in ('1' ,'2','3','4') )
      ) as protected_area
    </Parameter>
  </Datasource>
</Layer>
