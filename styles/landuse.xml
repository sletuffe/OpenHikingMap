<Style name="landuse">
    <!-- Forest outlines. Once more in landuse-over-hillshade -->
    <Rule>
		&maxscale_zoom11;
		&minscale_zoom11;
		<Filter>([natural] = 'wood' or [landuse] = 'wood' or [landuse] = 'forest')</Filter>
        <LineSymbolizer stroke="#61983c" stroke-width="0.3" stroke-opacity="0.3" />
	</Rule>
   <Rule>
		&maxscale_zoom12;
		&minscale_zoom13;
		<Filter>([natural] = 'wood' or [landuse] = 'wood' or [landuse] = 'forest')</Filter>
        <LineSymbolizer stroke="#61983c" stroke-width="0.6" stroke-opacity="0.3" />
	</Rule>
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom18;
		<Filter>([natural] = 'wood' or [landuse] = 'wood' or [landuse] = 'forest')</Filter>
		<LinePatternSymbolizer opacity="0.9" file="symbols/forest-outline.png"/>
	</Rule>

    <Rule>
		&maxscale_zoom11;
		&minscale_zoom11;
		<Filter>([natural] = 'wood' or [landuse] = 'wood' or [landuse] = 'forest')</Filter>
		<PolygonSymbolizer fill="#b9d984" />
	</Rule>
	<Rule>
		&maxscale_zoom12;
		&minscale_zoom18;
		<Filter>(([natural] = 'wood' or [landuse] = 'wood' or [landuse] = 'forest') and ([leaf_type] = 'needleleaved'))</Filter>
		<PolygonPatternSymbolizer file="symbols/forest-coniferous.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom12;
		&minscale_zoom18;
		<Filter>(([natural] = 'wood' or [landuse] = 'wood' or [landuse] = 'forest') and ([leaf_type] = 'broadleaved'))</Filter>
		<PolygonPatternSymbolizer file="symbols/forest-deciduous.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom12;
		&minscale_zoom18;
		<Filter>(([natural] = 'wood' or [landuse] = 'wood' or [landuse] = 'forest') and (not ([leaf_type] = 'needleleaved' or [leaf_type] = 'broadleaved')))</Filter>
		<PolygonPatternSymbolizer file="symbols/forest.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom18;
		<Filter>(([landuse] = 'meadow' or [landuse] = 'grassland' or [landuse] = 'grass' or [natural] = 'grassland') and not ([natural] = 'wetland'))</Filter>
		<PolygonPatternSymbolizer file="symbols/meadow.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom18;
		<Filter>([natural] = 'scrub')</Filter>
		<PolygonSymbolizer fill="#bfd4a9" fill-opacity="0.2" />
		<PolygonPatternSymbolizer file="symbols/scrub.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom18;
		<Filter>(([landuse] = 'cemetery') or ([amenity] = 'grave_yard'))</Filter>
		<PolygonPatternSymbolizer file="symbols/grave_yard.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom18;
		<Filter>([landuse] = 'vineyard')</Filter>
		<PolygonPatternSymbolizer file="symbols/vineyard.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom18;
		<Filter>([landuse] = 'hop_garden' or [crop] = 'hop')</Filter>
		<PolygonPatternSymbolizer file="symbols/hop.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom18;
		<Filter>([landuse] = 'orchard') and ([orchard] != 'meadow_orchard')</Filter>
		<PolygonPatternSymbolizer file="symbols/orchard.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom18;
		<Filter>[orchard] = 'meadow_orchard'</Filter>
		<PolygonPatternSymbolizer file="symbols/meadow_orchard.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom12;
		&minscale_zoom18;
		<Filter>([natural] = 'beach') or ([natural] = 'sand')</Filter>
		<PolygonPatternSymbolizer file="symbols/sand.png"/>
	</Rule>
	
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom18;
		<Filter>([natural] = 'fell')</Filter>
		<PolygonPatternSymbolizer file="symbols/fell.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom13;
		<Filter>[landuse] = 'quarry'</Filter>
		<PolygonPatternSymbolizer file="symbols/quarry_z13.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom18;
		<Filter>[landuse] = 'quarry'</Filter>
		<PolygonPatternSymbolizer file="symbols/quarry.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom12;
		&minscale_zoom18;
		<Filter>[natural] = 'bare_rock'</Filter>
		<PolygonPatternSymbolizer file="symbols/bare_rock.png" opacity="0.7"/>
	</Rule>
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom18;
		<Filter>[landuse] = 'allotments'</Filter>
		<PolygonPatternSymbolizer file="symbols/allotments.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom18;
		<Filter>[leisure] = 'park'</Filter>
		<PolygonSymbolizer fill="#c1dfac" fill-opacity="0.5" />
	</Rule>

	<!-- for pitch overlays see "symbols-sport" -->	
    <Rule>
		&maxscale_zoom15;
		&minscale_zoom15;
		<Filter>[leisure] = 'track'</Filter>
		<LineSymbolizer stroke="black" stroke-width="0.8" />
	</Rule>
	<Rule>
		&maxscale_zoom16;
		&minscale_zoom18;
		<Filter>[leisure] = 'pitch' or [leisure] = 'track'</Filter>
		<LineSymbolizer stroke="#8eb961" stroke-width="0.5" />
        <PolygonSymbolizer fill="#b6dea4" fill-opacity="0.5" />
	</Rule>
</Style>
