<Style name="text-natural-poly">

<!-- nature reserve -->
	<Rule>
		&maxscale_zoom12;
		&minscale_zoom12;
		<Filter>[leisure] = 'nature_reserve' and [way_area] &gt; 1E7</Filter>
		<TextSymbolizer fontset-name="sans-condensed-oblique" size="11" fill="#608c31" halo-radius="1" halo-fill="rgba(255,255,255,0.8)" wrap-width="100" wrap-before="true" placement="interior">[name]</TextSymbolizer>
	</Rule>
